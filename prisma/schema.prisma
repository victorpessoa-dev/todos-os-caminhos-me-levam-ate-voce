generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String
  text        String
  urlImage    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Gallery {
  id            String   @id @default(uuid())
  title         String?
  urlImage      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model About {
  id          String   @id
  description String?
  urlImage    String?
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
}
