generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(uuid())
  slug        String   @unique
  title       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  description String
  text        String
  urlImage    String?
}

model GalleryItem {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  title     String?
  updatedAt DateTime @updatedAt
  urlImage  String
}

model About {
  id          String   @id @default(uuid())
  title       String
  description String
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  urlImage    String?
}
